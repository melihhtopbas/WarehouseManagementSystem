@model Warehouse.ViewModels.Admin.ProductGroupShowViewModel
@{
    var paymentMethodPrefix = ViewData.TemplateInfo.HtmlFieldPrefix;
}
@using (Html.BeginCollectionItem(paymentMethodPrefix + ".OrderPackagedProductGroups"))
{
    <div class="row">
        <div class="form-group form-group-sm col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <span>@Model.Content</span>
        </div>
        <div class="form-group form-group-sm col-xs-4 col-sm-4 col-md-4 col-lg-4">
            
        </div>
        <div class="form-group form-group-sm col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <span>@Model.PackagedCount</span><span>x</span>
        </div>
    </div>
    @Html.HiddenFor(a => a.SKU)
    @Html.HiddenFor(a => a.QuantityPerUnit)
    @Html.HiddenFor(a => a.Id)
    @Html.HiddenFor(a => a.Content)
    @Html.HiddenFor(a => a.Count)
    @Html.HiddenFor(a => a.isPackage)
    @Html.HiddenFor(a => a.isPackagedCount)
    @Html.HiddenFor(a => a.PackagedCount)
}