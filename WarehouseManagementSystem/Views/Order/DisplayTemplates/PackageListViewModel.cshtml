@model Warehouse.ViewModels.Admin.PackageListViewModel



<div class="packageGroup">
    @using (Html.BeginCollectionItem("OrderPackageGroups"))
    {
        <table id="packageGroupTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Adet</th>
                    <th>Ağırlık(kg)</th>
                    <th>En(cm)</th>
                    <th>Yükselik(cm)</th>
                    <th>Boy(cm)</th>
                    <th>Desi</th>
                    <th>Sil</th>

                </tr>
            </thead>
            <tbody id="packageGroupTableList">
                <tr>
                    <td>@Model.Count</td>
                    <td>@Model.Weight</td>
                    <td>@Model.Width</td>
                    <td>@Model.Height</td>
                    <td>@Model.Length</td>
                    <td>@Model.Desi.ToString("0.000")</td>
                    <td class="remove-pck">
                        <a class="btn btn-sm btn-default">
                            <i class="fas fa-trash-alt text-danger"></i>
                        </a>
                    </td>
                </tr>
            </tbody>


        </table>
        @Html.HiddenFor(a => a.Count)
        @Html.HiddenFor(a => a.Height)
        @Html.HiddenFor(a => a.Weight)
        @Html.HiddenFor(a => a.Width)
        @Html.HiddenFor(a => a.Length)
        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.Desi)

    }

</div>
<script>

    $('.remove-pck').on('click', function () {
        $(this).closest('.packageGroup').remove();
    });
</script>
