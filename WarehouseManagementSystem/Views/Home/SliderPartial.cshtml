@model List<Warehouse.ViewModels.WebSite.SliderListViewModel>
@using Warehouse.Utils.Constants
@{ int i = 0;}



<!-- banner-carousel starts
 ============================================ -->
<div id="banner-carousel" class="carousel slide banner-carousel" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#banner-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#banner-carousel" data-slide-to="1"></li>
        <li data-target="#banner-carousel" data-slide-to="2"></li>
    </ol>
    <!-- End of .carousel-indicator -->

    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            if (item == Model.FirstOrDefault())
            {
                <div class="carousel-item active">
                    <div class="ip-banner fullscreen-banner banner-slide-3">
                        <div class="content d-flex align-items-center justify-content-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-md-6 text-md-left text-center">
                                        <h1>
                                            @item.ButtonText1
                                        </h1>
                                        <p>
                                            @item.ButtonText2
                                        </p>
                                        @*<a class="primary-btn btn-white" href="contact.html">Get Started Today</a>*@
                                    </div>
                                    <div class="col-md text-center text-md-right">
                                        <img src="@Url.Content(String.Format(SystemConstants.SliderImagePath) + "/" + item.FileName)" alt="@item.Alt" class="img-fluid">
                                    </div>

                                </div>
                            </div>
                            <!-- End of .container -->
                        </div>
                        <!-- End of .content -->
                    </div>
                    <!-- End of .banner -->
                </div>
                <!-- End of .carousel-item -->
            }
            else
            {
                <div class="carousel-item">
                    <div class="ip-banner fullscreen-banner banner-slide-3">
                        <div class="content d-flex align-items-center justify-content-center">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-md-6 text-md-left text-center">
                                        <h1>
                                            @item.ButtonText1
                                        </h1>
                                        <p>
                                            @item.ButtonText2
                                        </p>
                                        @*<a class="primary-btn btn-white" href="contact.html">Get Started Today</a>*@
                                    </div>
                                    <div class="col-md text-center text-md-right">
                                        <img src="@Url.Content(String.Format(SystemConstants.SliderImagePath) + "/" + item.FileName)" alt="@item.Alt" class="img-fluid">
                                    </div>
                                </div>
                            </div>
                            <!-- End of .container -->
                        </div>
                        <!-- End of .content -->
                    </div>
                    <!-- End of .banner -->
                </div>
                <!-- End of .carousel-item -->
            }
        }

    </div>
    <!-- End of .carousel-inner -->

    <a class="carousel-control-prev" href="#banner-carousel" role="button" data-slide="prev">
        <i class="icon-Chevon---Left"></i>
    </a>
    <a class="carousel-control-next" href="#banner-carousel" role="button" data-slide="next">
        <i class="icon-Chevron---Right"></i>
    </a>
</div>
<!-- End of .banner-carousel -->
