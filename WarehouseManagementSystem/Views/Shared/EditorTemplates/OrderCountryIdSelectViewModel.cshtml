@using WarehouseManagementSystem.Extensions
@model Warehouse.ViewModels.Admin.OrderCountryIdSelectViewModel
@{
    var categoryList = new SelectList((List<Warehouse.ViewModels.Admin.CountryListViewModel>)ViewData["Countries"], "Id", "Name").ToList();
    categoryList.Add(new SelectListItem()
    {
        Value = string.Empty,
        Text = "Ülke Seçiniz"
    });
}
<div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12  ">
    <div class="input-group input-group-sm">
        <span class="input-group-addon as-label required">
            <strong> @Html.DisplayNameFor(m => m.CountryId)</strong>
        </span>

        @Html.DropDownListFor(a => a.CountryId, categoryList.OrderBy(a => a.Value), new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.CountryId, "", new { @class = "text-danger" })
</div>