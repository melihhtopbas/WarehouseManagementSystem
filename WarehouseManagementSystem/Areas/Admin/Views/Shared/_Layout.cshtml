    <script>
        $(document).ready(function () {

            $('#orderSearchForm').submit();
            $('#countrySearchForm').submit();





            $("#OrderListContainer").on("click", ".deleteOrder", function () {
                gelenID = new Object();
                gelenID.ID = $(this).attr("data-id");
                var btn = $(this);

                Swal.fire({

                    title: 'Emin misiniz?',
                    text: "Sildikten sonra geri alamayacaksınız!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#23a928',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil <i class="fa fa-thumbs-up"></i>',
                    cancelButtonText: 'İptal <i class="fa fa-thumbs-down"></i>',

                }).then((result) => {
                    if (result.isConfirmed) {

                        $.ajax({
                            type: "POST",
                            url: "/Admin/Order/Delete/" + gelenID.ID,

                        }).done(function (result) {
                            if (result.success) {
                                btn.parent().parent().remove();
                                Swal.fire({
                                    position: 'center',
                                    icon: 'success',
                                    title: 'İşlem başarıyla tamamlandı',
                                    showConfirmButton: false,
                                    timer: 1500,

                                });
                            }
                        });





                    }
                })



            });

          


        });
        function deleteOrder() {
            var that = $(this);
            var orderId = that.data('orderId');
            var container = $('#OrderListContainer');
            //The overlay
            var overlay = $("<div class='loader-wrapper'><div class='loadingOverlay'></div></div>");
            container.append(overlay);
            $.ajax({
                url: '/Order/Delete',
                dataType: 'json',
                type: "POST",
                cache: false,
                data: { orderId: orderId }
            }).done(function (result) {
                container.find(overlay).remove();
                if (result.success) {
                    var $tr = that.closest('tr.master-row');
                    $tr.nextUntil('tr.master-row').empty().remove();
                    $tr.animateDelete();
                    $.each(result.successMessages,
                        function (i, item) {
                            toastr.success(item);
                        });
                    $.each(result.warningMessages,
                        function (i, item) {
                            toastr.success(item);
                        });
                } else {
                    $.each(result.errorMessages,
                        function (i, item) {
                            toastr.error(item);
                        });
                }
            }).fail(function () {
                container.find(overlay).remove();
            });
        };
        function deleteCountry() {
            var that = $(this);
            var countryId = that.data('countryId');

            var container = $('#CountryListContainer');
            //The overlay
            var overlay = $("<div class='loader-wrapper'><div class='loadingOverlay'></div></div>");

            container.append(overlay);

            $.ajax({
                url: '/admin/CountrySetting/delete',
                dataType: 'json',
                type: "POST",
                cache: false,
                data: { countryId: countryId }
            }).done(function (result) {
                container.find(overlay).remove();
                if (result.success) {
                    var $tr = that.closest('tr.master-row');
                    $tr.nextUntil('tr.master-row').empty().remove();
                    $tr.animateDelete();

                    $.each(result.successMessages,
                        function (i, item) {
                            toastr.success(item);
                        });
                    $.each(result.warningMessages,
                        function (i, item) {
                            toastr.success(item);
                        });
                } else {
                    $.each(result.errorMessages,
                        function (i, item) {
                            toastr.error(item);
                        });
                }
            }).fail(function () {
                container.find(overlay).remove();
            });
        };
