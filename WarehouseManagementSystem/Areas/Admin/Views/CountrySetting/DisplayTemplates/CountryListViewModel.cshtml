
@model Warehouse.ViewModels.Admin.CountryListViewModel
<tr id="@("country_"+Model.Id)" class="master-row">
   
    <td>@Model.Id</td>
    <td>
        @Model.Name
    </td>
    <td style="width:50px">
        <a data-modal-form="true"
           data-modal-size="modal-lg"
           data-modal-update="#country_@Model.Id"
           data-modal-highlight="#country_@Model.Id"
           data-modal-title="Ülke Düzenle"
           data-hook-beforeunload="true"
           class="btn btn-block btn-success btn-sm"
           href="@Url.Action("Edit", "CountrySetting", routeValues: new {Area = "Admin",countryId=Model.Id})">
            <i class="fa fa-edit fa-fw text-success"></i> Ülke Düzenle
        </a>

    </td>
    <td style="width:50px">
        <a href="javascript:void(0);"
           data-toggle="confirmation"
           title="Emin Misiniz"
           data-btn-ok-label="Evet"
           data-btn-cancel-label="Hayır"
           data-placement="top"
           data-country-id="@Model.Id"
           data-on-confirm="deleteCountry"
           class="btn btn-block btn-danger btn-sm">
            <i class="fa fa-trash fa-fw text-danger"></i> Ülke Sil
        </a>

    </td>
</tr>
