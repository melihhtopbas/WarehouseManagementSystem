
@model Warehouse.ViewModels.Admin.ReferenceListViewModel
<tr id="@("reference_"+Model.Id)" class="master-row">
    <th>
        <img src="@Url.Content(String.Format(SystemConstants.ReferenceImageThumbPath) + "/" + Model.FileName)" />
    </th>
    <td>@Model.Name</td>

    <td style="width:50px">
        <a data-modal-form="true"
           data-modal-size="modal-lg"
           data-modal-update="#reference_@Model.Id"
           data-modal-highlight="#reference_@Model.Id"
           data-modal-title="Referans Düzenle"
           data-hook-beforeunload="true"
           class="btn btn-block btn-success btn-sm"
           href="@Url.Action("Edit", "ReferenceSetting", routeValues: new {Area = "Admin",referenceId=Model.Id})">
            <i class="fa fa-edit fa-fw text-success"></i> Referans Düzenle
        </a>

    </td>
    <td style="width:50px">
        <a href="javascript:void(0);"
           data-toggle="confirmation"
           title="Emin Misiniz"
           data-btn-ok-label="Evet"
           data-btn-cancel-label="Hayır"
           data-placement="top"
           data-reference-id="@Model.Id"
           data-on-confirm="deleteReference"
           class="btn btn-block btn-danger btn-sm">
            <i class="fa fa-trash fa-fw text-danger"></i> Referans Sil
        </a>

    </td>
</tr>
