@model Warehouse.ViewModels.Admin.OrderPackageProductEditViewModel

<div class="row">
    <div class="col-xs-12">
        <div class="alert alert-warning alert-dismissible">
            <h4><i class="fa-solid fa-circle-info"></i> Bilgilendirme!</h4>
            Lütfen paketinizde bulunmasını kaç ürün varsa miktarını giriniz. Paketlenmeyen ürün miktarından daha fazlası paketlenemez ve toplam ürün sayısından fazla miktar girilemez!
        </div>
    </div>
</div>
<a class="btn btn-warning btn-sm"
   data-modal-form="true"
   data-modal-size="modal-lg"
   data-modal-prepend="tbody#PackageProductsList"
   data-modal-title="Koliye Ürün Ekle"
   data-hook-beforeunload="true"
   href="@Url.Action("PackageProductAdd", "OrderPackage", routeValues: new {Area ="Admin",orderPackageId = Model.OrderId})">
    <i class="fa fa-plus"></i>Bu koliye ekleme yap
</a>
<div class="clearfix"></div>
<br />
<div class="clearfix"></div>
@using (Html.BeginForm("Edit", "OrderPackage", new { Area = "Admin" }, FormMethod.Post, new { id = "packageEditForm", role = "form" }))
{
    <style>
        form ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        form li {
            float: left;
        }

            form li a {
                display: block;
                color: white;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                form li a:hover {
                    background-color: #111111;
                }
    </style>
    <div class="row">
        <div class="col-xs-12">
            @Html.AntiForgeryToken()
            @Html.RenderValidationSummary(true)
            @Html.HiddenFor(m => m.Id, new { data_val = "false" })
            @Html.HiddenFor(m => m.OrderId)
        </div>
    </div>

    <div class="row">


        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>İçerik</th>
                    <th>SKU</th>
                    <th>Toplam Ürün Sayısı</th>
                    <th>Paketlenmeyen ürün sayısı</th>
                    <th>Paketteki ürün sayısı</th>
                    <th>Paketteki yeni ürün sayısı</th>
                    <th style="width:50px">Sil</th>
                </tr>
            </thead>
            <tbody id="PackageProductsList">
                @if (Model != null && Model.ProductGroupsEditViewModels != null)
                {


                    foreach (var item in Model.ProductGroupsEditViewModels)
                    {
                        @Html.Partial("~/Areas/Admin/Views/OrderPackage/_ProductGroup.cshtml", item)

                    }
                }


            </tbody>

        </table>




        <div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-6 col-lg-6 @Html.ModelStateFor(m => m.Barcode)">
            @Html.TextBoxBlockLabelAsAddonFor(m => m.Barcode, new { @class = "show-maxlength" })
        </div>
        <div class="clearfix"></div>


    </div>
    <hr />
    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary pull-right margin-left10"><span class="fa fa-check"></span>&nbsp;&nbsp;Onayla</button>

        </div>
    </div>
    <div class="clearfix"></div>

}