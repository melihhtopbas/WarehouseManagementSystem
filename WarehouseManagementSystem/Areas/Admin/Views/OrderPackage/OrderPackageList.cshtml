@model IPagedList<Warehouse.ViewModels.Admin.OrderPackageListViewModel>
 

<div class="products-list-tools clearfix">

    
        <a class="btn btn-warning btn-sm"
           data-modal-form="true"
           data-modal-size="modal-lg"
           data-modal-prepend="tbody#CountryList"
           data-modal-title="Ülke Ekle"
           data-hook-beforeunload="true"
           href="@Url.Action("Add", "CountrySetting", routeValues: new {Area ="Admin"})">
            <i class="fa fa-plus"></i>Sipariş Paketi Ekle
        </a>
    


    <div class="pull-right hidden-xs hidden-sm">
        @if (Model.Any())
        {
            <div style="margin: 20px 0; float: left !important;">
                @((Model.PageIndex * Model.PageSize) + 1)-@((Model.PageIndex * Model.PageSize) + Model.Count())/@Model.TotalItemCount
            </div>
        }


        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount, new AjaxOptions { UpdateTargetId = "OrderPackageListContainer" }).Options(o => o
            .Action("OrderPackageList")
            .DisplayTemplate("BootstrapPage")
            .MaxNrOfPages(6)
            .AlwaysAddFirstPageNumber()
          



        )
    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#Barcode</th>
            <th>Desi</th>
            <th>Sipariş Id</th>
            <th style="width:50px">Düzenle</th>
            <th style="width:50px">Sil</th>
        </tr>
    </thead>
    <tbody id="OrderPackageList">
        @Html.DisplayFor(m => m)


    </tbody>

</table>
<div class="pull-left">


    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount, new AjaxOptions { UpdateTargetId = "OrderPackageListContainer" }).Options(o => o
        .Action("OrderPackageList")
        .DisplayTemplate("BootstrapPage")
        .MaxNrOfPages(6)
        .AlwaysAddFirstPageNumber()
       

        )
</div>
@if (Model.Any())
{
    <div style="margin: 20px 0; float: left !important;">
        @((Model.PageIndex * Model.PageSize) + 1)-@((Model.PageIndex * Model.PageSize) + Model.Count())/@Model.TotalItemCount
    </div>
}

