@model Warehouse.ViewModels.Admin.CategorySearchViewModel
@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<title>FAQ Kategori</title>
<style>
    .project-tab {
        padding: 10%;
        margin-top: -8%;
    }

        .project-tab #tabs {
            background: #007b5e;
            color: #eee;
        }

            .project-tab #tabs h6.section-title {
                color: #eee;
            }

            .project-tab #tabs .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
                color: #0062cc;
                background-color: transparent;
                border-color: transparent transparent #f3f3f3;
                border-bottom: 3px solid !important;
                font-size: 16px;
                font-weight: bold;
            }

        .project-tab .nav-link {
            border: 1px solid transparent;
            border-top-left-radius: .25rem;
            border-top-right-radius: .25rem;
            color: #0062cc;
            font-size: 16px;
            font-weight: 600;
        }

            .project-tab .nav-link:hover {
                border: none;
            }

        .project-tab thead {
            background: #f3f3f3;
            color: #333;
        }

        .project-tab a {
            text-decoration: none;
            color: #333;
            font-weight: 600;
        }
</style>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-solid">
            <div class="box-header">
                <i class="fa fa-book"></i>
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("FaqCategoryList", "CategorySetting", new { Area = "Admin" }, FormMethod.Post, new { role = "form", id = "faqCategorySearchForm", data_ajax_form = "true", data_target_container = "#faqCategoryListContainer" }))
                {
                    <div class="row">
                        <div class="form-group form-group-sm col-xs-12 col-sm-6 col-md-4 col-lg-4 @Html.ModelStateFor(m => m.Name)">
                            @Html.TextBoxBlockLabelAsAddonFor(m => m.Name)
                        </div>

                        <div class="form-group form-group-sm col-xs-12 col-sm-6 col-md-6 col-lg-3 @Html.ModelStateFor(m => m.LanguageId)">
                            <div class="input-group input-group-sm">
                                <span class="input-group-addon as-label">@Html.DisplayNameFor(m => m.LanguageId) </span>
                                @Html.DropDownListFor(a => a.LanguageId, new SelectList(ViewBag.Languages, "Id", "Name"), new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.LanguageId, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group form-group-sm col-xs-12 col-sm-4 col-sm-push-3 col-md-4 col-md-push-3">
                            <div class="input-group">
                                <button type='submit' class="btn btn-sm btn-default btn-block"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>

                }
                <div>
                    <div id="faqCategoryListContainer"></div>
                </div>
            </div>
        </div>
    </div>
</div>

