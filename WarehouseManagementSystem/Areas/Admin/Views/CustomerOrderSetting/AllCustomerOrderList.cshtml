@model IPagedList<Warehouse.ViewModels.Admin.AllCustomerOrderListViewModel>


 
 

<div class="pull-right hidden-xs hidden-sm">
    @if (Model.Any())
    {
        <div style="margin: 20px 0; float: left !important;">
            @((Model.PageIndex * Model.PageSize) + 1)-@((Model.PageIndex * Model.PageSize) + Model.Count())/@Model.TotalItemCount
        </div>
    }

    &nbsp;
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount, new AjaxOptions { UpdateTargetId = "AllCustomerOrderListContainer" }).Options(o => o
        .Action("AllCustomerOrderList")
        .DisplayTemplate("BootstrapPage")
        .MaxNrOfPages(6)
        .AlwaysAddFirstPageNumber()
        )


</div>



<div class="clearfix"><div class="form-group form-group-sm col-xs-12 col-sm-12 col-md-12 col-lg-12"></div></div>
<table id="tblOrders" class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı</th> 
            <th>Sipariş Oluşturulma Tarihi</th>
            <th>Alıcı Adres</th>
            <th>Kargo Servis Tipi</th>
            <th>Bütün Ürünler Paketlendi mi?</th>
            <th>Toplam Koli Adeti</th>
            <th>Düzenle</th>
            <th>Sil</th>
            <th>Ürünleri Görüntüle</th>
            <th>Sipariş Paketle</th>




        </tr>
    </thead>
    <tbody id="AllCustomerOrderList">
        @Html.DisplayFor(m => m)
    </tbody>


</table>
<div class="pull-left">


    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount, new AjaxOptions { UpdateTargetId = "AllCustomerOrderListContainer" }).Options(o => o
        .Action("AllCustomerOrderList")
        .DisplayTemplate("BootstrapPage")
        .MaxNrOfPages(6)
        .AlwaysAddFirstPageNumber()

        )
</div>
@if (Model.Any())
{
    <div style="margin: 20px 0; float: left !important;">
        @((Model.PageIndex * Model.PageSize) + 1)-@((Model.PageIndex * Model.PageSize) + Model.Count())/@Model.TotalItemCount
    </div>
}
<script>
    $(function () {
        $("#tblOrders").dataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });


    });

</script>
