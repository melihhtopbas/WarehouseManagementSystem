@model Warehouse.ViewModels.Admin.ProductGroupShowViewModel
@using WarehouseManagementSystem.Extensions

@using (Html.BeginCollectionItem("OrderProductGroups"))
{
    <div class="row">
        <div class="col-xs-12">


            @Html.HiddenFor(a => a.Id)
            @Html.HiddenFor(a => a.Content)
            @Html.HiddenFor(a => a.Count)
            @Html.HiddenFor(a => a.SKU)
            @Html.HiddenFor(a => a.GtipCode)
            @Html.HiddenFor(a => a.QuantityPerUnit)
            @Html.HiddenFor(a => a.isPackagedCount)


        </div>
    </div>


    <div id="orderSelectedPackage" class="form-group form-group-sm col-xs-12  @Html.ModelStateFor(m => m.isChecked)">
        <div class="input-group input-group-sm">
            @if (Model.isPackagedCount != 0)
            {

                <tr class="master-row">



                    <td>
                        @Html.CheckBoxFor(u => u.isChecked, new { @class = "CheckClass" })
                    </td>
                    <td>
                        <span>
                            <span id="contentVal">@Model.Content</span>
                        </span>
                    </td>
                    <td>
                        <span>x</span><span>@Html.DisplayFor(m => m.isPackagedCount, new { id = "isPackagedProductCount" })</span>
                    </td>
                    <td id="packageProductCount">


                        @Html.TextBoxFor(m => m.PackagedCount, new { id = "packagedCount_" + Model.Id })

                    </td>
                    <td style="width:50px">
                        <a href="javascript:void(0);"
                           data-toggle="confirmation"
                           title="Emin Misiniz"
                           data-btn-ok-label="Evet"
                           data-btn-cancel-label="Hayır"
                           data-placement="top"
                           data-select-id="@Model.Id"
                           data-on-confirm="selectAll"
                           class="btn btn-block">
                            Tümünü paketle
                        </a>

                    </td>

                </tr>

            }
        </div>
    </div>

}

