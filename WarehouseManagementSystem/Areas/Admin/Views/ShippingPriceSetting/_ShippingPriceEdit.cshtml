@model Warehouse.ViewModels.Admin.ShippingPriceViewModel
@using (Html.BeginForm("Edit", "ShippingPriceSetting", new { Area = "Admin" }, FormMethod.Post, new { id = "shippingPriceEditForm", role = "form" }))
{
    <style>
        form ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        form li {
            float: left;
        }

            form li a {
                display: block;
                color: white;
                text-align: center;
                padding: 16px;
                text-decoration: none;
            }

                form li a:hover {
                    background-color: #111111;
                }
    </style>
    <div class="row">
        <div class="col-xs-12">
            @Html.AntiForgeryToken()
            @Html.RenderValidationSummary(true)
            @Html.HiddenFor(m => m.LanguageId, new { data_val = "false" })
            @Html.HiddenFor(m => m.Id, new { data_val = "false" })
            @Html.HiddenFor(m => m.CountryName, new { data_val = "false" })
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">  <h3>@Model.CountryName kargo servis ve fiyatları</h3></div>
        @if (Model.CountryShippingPriceViewModels != null)
        {
            <div class="col-xs-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Kargo Servis Tipi</th>
                            <th>Aktif mi?</th>
                            <th>Desi bazlı fiyat</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CountryShippingPriceViewModels)
                        {
                            @Html.Partial("~/Areas/Admin/Views/ShippingPriceSetting/_CountryShippingPrice.cshtml", item)
                        }
                    </tbody>
                </table>

            </div>



        }



    </div>
    <div class="clearfix"></div>


    <hr />
    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary pull-right margin-left10"><span class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
            <button class="btn btn-danger pull-right" type="button" data-dismiss="modal"><span class="fa fa-times"></span>&nbsp;&nbsp;İptal</button>
        </div>
    </div>
    <div class="clearfix"></div>

}