
@model Warehouse.ViewModels.Admin.PageListViewModel
<tr id="@("page_"+Model.Id)" class="master-row">

    <td>@Model.Name</td>

    <td style="width:50px">
        <a data-modal-form="true"
           data-modal-size="modal-lg"
           data-modal-update="#page_@Model.Id"
           data-modal-highlight="#page_@Model.Id"
           data-modal-title="Sayfa Düzenle"
           data-hook-beforeunload="true"
           class="btn btn-block btn-success btn-sm"
           href="@Url.Action("Edit", "PageSetting", routeValues: new {Area = "Admin",pageId=Model.Id})">
            <i class="fa fa-edit fa-fw text-success"></i> Sayfa Düzenle
        </a>

    </td>
    <td style="width:50px">
        <a href="javascript:void(0);"
           data-toggle="confirmation"
           title="Emin Misiniz"
           data-btn-ok-label="Evet"
           data-btn-cancel-label="Hayır"
           data-placement="top"
           data-page-id="@Model.Id"
           data-on-confirm="deletePage"
           class="btn btn-block btn-danger btn-sm">
            <i class="fa fa-trash fa-fw text-danger"></i> Sayfa Sil
        </a>

    </td>
</tr>
