

@model Warehouse.ViewModels.Admin.LoginViewModel
@using WarehouseManagementSystem.Extensions

<link href="~/Areas/Admin/Content/bootstrap.css" rel="stylesheet" />

<script src="~/Areas/Admin/Scripts/jquery-3.4.1.min.js"></script>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş</title>

    <link rel="shortcut icon" href="~/uploads/Favicon.png" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
    <script src="~/Areas/Admin/Scripts/custom.modal.form.js"></script>

    <script src="https://kit.fontawesome.com/d0ade9b5d6.js" crossorigin="anonymous"></script>
</head>

<body>
    <div style="font-size:large" class="login-wrap">
        <div class="vh-100 d-flex justify-content-center align-items-center ">
            <div class="col-md-5 p-5 shadow-sm border rounded-5 border-primary bg-white">
                <h2 class="text-center mb-4 text-primary">Login</h2>
                <div class="login-form">
                    @using (Html.BeginForm("Index", "Login", new { Area = "Admin" }, FormMethod.Post, new { id = "loginForm", role = "form" }))
                    {
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.AntiForgeryToken()
                                @Html.RenderValidationSummary(true)
                                 

                            </div>
                        </div>
                        <div class="mb-3">
                            <strong> @Html.DisplayNameFor(a => a.UserName)</strong>
                            @Html.TextBoxFor(a => a.UserName, new { type = "text", @class = "form-control border border-primary" })
                            @Html.ValidationMessageFor(a => a.UserName)
                        </div>
                        <div class="mb-3">
                            <strong> @Html.DisplayNameFor(a => a.Password)</strong>
                            @Html.TextBoxFor(a => a.Password, new { type = "password", @class = "form-control border border-primary", data_type = "password" })
                            @Html.ValidationMessageFor(a => a.Password)
                        </div>
                        <p class="small"><a class="text-primary" href="forget-password.html">Forgot password?</a></p>
                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Giriş</button>
                        </div>
                    }
                </div>
                <div class="mt-3">
                    <p class="mb-0  text-center">
                        Don't have an account? <a  
                                                  href="@Url.Action("Register", "UserRegister", new {Area="Admin"})">
                            <i class="fa-solid fa-registered"></i> Kayıt Ol
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
<style>
    .login-wrap {
        background-image: url('../../../../uploads/back-login.png');
        background-size: cover;
    }
</style>
